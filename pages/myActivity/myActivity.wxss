page {
  background-color: #f0f0f0;
}
.activity {
  padding: 10px 20px;
}
.activity_list {
  /* margin: 10px 20px; */
  margin-bottom: 10px;
  border: 1px solid #e4e4e4;
  box-shadow: 1px 8px 18px 1px #d3d3d6;
  display: flex;
  /* width: 100%; */
  padding: 10rpx;
}
.activity_list_left {
  width: 40%;
}
.activity_list_right {
  width: 60%;
}
.activity_des {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #c9c9c9;
  font-size: 12px;
}
.activity_list_right > view {
  line-height: 50rpx;
}
.nomoreData {
  color: #c9c9c9;
  text-align: center;
  line-height: 60rpx;
}
