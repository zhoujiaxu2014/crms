.content{
    padding: 10rpx;
}
.group{
    width: 335rpx;
    font-size: 25rpx;
    margin: 15rpx;
    display: inline-block;
}
.group>view{
    display: block;
    text-align: center;
}
.group>image{
    width: 335rpx;
    height:335rpx;
    display: block;
    border-radius: 10rpx;
    margin: 10rpx 0;
}
.tabBar{
    display:flex;
    justify-content: space-around;
    font-size: 25rpx;
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    border-top: 1px solid #f7f7f7;
    padding: 10px;
    background: #fff;
  }
  .tabBar>view{
    display: flex;
    flex-direction: column;
    text-align: center;
  }
  button{
      border:0 !important;
      line-height:1.2 !important;
  }

  .box-img {
      width: 100%;
      text-align: center;
  }
  .box-item {
      width: 50%;
      display: inline-block;
      text-align: center;
      margin-bottom: 10px;
  }
  .img {
      border: 3px solid #e4e4e4;
      height: 300rpx;
      width: 300rpx;
      margin: 0 auto;
  }
  .box-item p {
      font-size: 12PX;
      margin-top: 10px;
  }
